---
import { SITE_TITLE, SITE_DEV, SITE_DEV_URL, SITE_LOGO, SITE_LOGO_ALT, SOCIAL_MEDIA } from '../consts';
---

<footer id="footer-1147">
    <div class="cs-container">
        <div class="cs-top">
            <a aria-label="retour à l'accueil" class="cs-logo" href="index.html">
                <img class="cs-logo-img" loading="lazy" decoding="async" src={SITE_LOGO} alt={SITE_LOGO_ALT} width="168" height="48">
            </a>
            <ul class="cs-ul">
                <li class="cs-li">
                    <a href="index.html" class="cs-link">Accueil</a>
                </li>
                <li class="cs-li">
                    <a href="apropos.html" class="cs-link">À Propos</a>
                </li>
                <li class="cs-li">
                    <a href="coaching.html" class="cs-link">Coaching</a>
                </li>
                <li class="cs-li">
                    <a href="blog.html" class="cs-link">Blog</a>
                </li>
                <li class="cs-li">
                    <a href="contact.html" class="cs-link">Contact</a>
                </li>
                <li class="cs-li">
                    <a href="mentions-legales.html" class="cs-link">Mentions Légales</a>
                </li>
            </ul>
        </div>
        <div class="cs-bottom">
            <!-- Social -->
            <ul class="cs-social">
                {SOCIAL_MEDIA.map((social, index) => (
                    <li class="cs-social-li">
                        <a href={social.url} class="cs-link" aria-label={social.name} target="_blank" rel="noopener">
                            <span class={social.iconClass}></span>   
                        </a>
                    </li>
                ))}
            </ul>
            <span class="cs-copyright">
                {SITE_TITLE} © Copyright 2024 - Fait avec ❤️ par <a href={SITE_DEV_URL} class="cs-copyright-link">{SITE_DEV}</a>
            </span>
        </div>
    </div>
    <!-- Image de fond (commentée) -->
